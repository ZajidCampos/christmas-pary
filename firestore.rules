rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci칩n de RSVPs
    match /rsvps/{rsvpId} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir escritura solo para crear nuevos documentos
      allow create: if true;
      
      // Permitir actualizaci칩n y eliminaci칩n solo si eres el due침o
      allow update, delete: if false;
    }
  }
}
